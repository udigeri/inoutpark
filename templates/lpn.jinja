{% extends "_main.jinja" %}

{% block title %} index {% endblock %}


{% block main %}
        <section class="logo">
            <img src="{{ url_for('static', filename='img/p.svg') }}" alt="Parking logo" width="100">
        </section>

        <section class="merchant">
            <h3>
                {{ tenant.name }}
            </h3>
            <p>
                {{ tenant.company }}<br>{{ tenant.street }}, {{ tenant.zip }} {{ tenant.city }}<br>{{ tenant.country }}
            </p>
        </section>

        <section class="cart">
            <h3>
                Parking Ticket
            </h3>
            <ol>
                <li class="lpn">
                    LPN
                    <span>
                        {{ cart.lpn }}
                    </span>
                </li>
                <li class="epan">
                    EPAN
                    <span>
                        {{ cart.epan }}
                    </span>
                </li>
                <li>
                    from
                    <span>
                        06.02.2023 10:13:45
                    </span>
                </li>
                <li>
                    to
                    <span>
                        06.02.2023 11:25:00
                    </span>
                </li>
                <li class="divide"></li>
            </ol>

            <h2>
                Total
                <span class="date">
                    {{ cart.getFormattedAmount(cart.amount) }}
                </span>
            </h2>
        </section>

        <section class="pay">
            <h3>
                â‚¬
                <span class="amount">
                    {{ cart.getFormattedAmount(cart.amount) }}
                </span>
            </h3>
            <a href="{{url_for('viewCarts')}}a56dfd2f-1216-4d74-b4a0-798e12286469">
                <button>
                    Pay
                </button>
            </a>
        </section>

        <footer>
            You will be redirected to S&B PGS - Payment Gateway Service
        </footer>
{% endblock %}