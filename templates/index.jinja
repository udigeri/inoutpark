{% extends "_main.jinja" %}

{% block title %} index {% endblock %}


{% block main %}
        <section class="logo">
            <img src="{{ url_for('static', filename='img/p.svg') }}" alt="Parking logo" width="100">
        </section>

        <section class="merchant">
            <h3>
                {{ tenant.name }}
            </h3>
            <p>
                {{ tenant.company }}<br>{{ tenant.street }}, {{ tenant.zip }} {{ tenant.city }}<br>{{ tenant.country }}
            </p>
        </section>

        <section class="uuid">
            <form class="uuid" action="{{ url_for('viewLpn') }}" method="POST">
                <input type="text" placeholder="LPN" name="lpn" id=lpn/>
            </form>
        </section>

{% endblock %}